<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My Cover Letters</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
      .centered-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin-top: 50px;
      }
      .center-text {
      text-align: center;
    }
    .padded-content {
        padding: 20px;
      }
    </style>
  </head>
<body>
    <h2 class="padded-content">My Cover Letters</h2>

    <% if @cover_letters.empty? %>
      <div class="padded-content">
        <p>No cover letters generated yet.</p>
        <a href="/start" class="btn btn-primary">Make One Now</a>
      </div>
    <% else %>
      <div class="centered-content">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Company</th>
              <th scope="col">Job Title</th>
              <th scope="col">Created On</th>
              <th scope="col">View</th>
            </tr>
          </thead>
          <tbody>
            <% @cover_letters.each do |cover_letter| %>
              <tr>
                <td><%= cover_letter.company_name %></td>
                <td><%= cover_letter.job_title %></td>
                <td><%= cover_letter.created_at %></td>
                <td><a href="/cover/<%= cover_letter.id %>">View Cover Letter</a></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <br>
        <hr>
        <a href="/start" class="btn btn-primary">Make a New Cover Letter</a>
      </div>
    <% end %>
  </body>
</html>
