<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cover Up Submit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  </head>
<body>
<h1>Get Ready to Cover Up</h1>

  <%= form_with(url: "/send_message", method: :post) do %>

    <div class="form-group">
      <label for="job_body">Job Description</label>
      <%= text_area_tag 'query_job_body', nil, id: 'job_body', class: 'form-control', rows: 3 %>
    </div>

    <div class="form-group">
      <label for="company_name">Company Name</label>
      <%= text_area_tag 'query_company_name', nil, id: 'company_name', class: 'form-control', rows: 3 %>
    </div>

    <div class="form-group">
      <label for="company_body">Company Description</label>
      <%= text_area_tag 'query_company_body', nil, id: 'company_body', class: 'form-control', rows: 3 %>
    </div>

    <div class="form-group">
      <label for="message_body">Current Cover Letter</label>
      <%= text_area_tag 'query_message_body', nil, id: 'message_body', class: 'form-control', rows: 5 %>
    </div>
    <div class="form-group">
    <label for="file_input">Upload Resume</label>
    <%= file_field_tag 'uploaded_cv', id: 'file_input', class: 'form-control' %>
  </div>
    <%= hidden_field_tag 'query_user_id', current_user.id %>

    <br>
    <%= submit_tag "Submit", class: "btn btn-primary" %>

  <% end %>

</body>
</html>
