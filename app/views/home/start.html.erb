<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cover Up Submit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
  </head>
<body>
  <h1>Get Ready to Cover Up</h1>

  <%= form_with(url: "/send_message", method: :post, local: true) do |form| %>

    <div class="form-group">
      <%= form.label :job_body, 'Job Description', class: 'form-control-label' %>
      <%= form.text_area :job_body, id: 'job_body', class: 'form-control', rows: 3 %>
    </div>

    <div class="form-group">
      <%= form.label :company_name, 'Company Name', class: 'form-control-label' %>
      <%= form.text_area :company_name, id: 'company_name', class: 'form-control', rows: 3 %>
    </div>

    <div class="form-group">
      <%= form.label :company_body, 'Company Description', class: 'form-control-label' %>
      <%= form.text_area :company_body, id: 'company_body', class: 'form-control', rows: 3 %>
    </div>

    <div class="form-group">
      <%= form.label :message_body, 'Current Cover Letter', class: 'form-control-label' %>
      <%= form.text_area :message_body, id: 'message_body', class: 'form-control', rows: 5 %>
    </div>

    <div class="form-group">
      <%= form.label :resume, 'Upload Resume', class: 'form-control-label' %>
      <%= form.file_field :resume, class: 'form-control' %>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.hidden_field :role, value: "user" %>

    <br>
    <%= form.submit "Submit", class: "btn btn-primary" %>

  <% end %>

</body>
</html>
