<div>
  <div>
    <h1>
      List of all responses
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new response
    </h2>

    <form action="/insert_response" method="post">
      <div>
        <label for="response_number_box">
          Response number
        </label>

        <input type="text" id="response_number_box" name="query_response_number">
      </div>

      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="message_id_box">
          Message
        </label>

        <input type="text" id="message_id_box" name="query_message_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create response
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Response number
        </th>

        <th>
          Body
        </th>

        <th>
          Message
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_responses.each do |a_response| %>
      <tr>
        <td>
          <%= a_response.id %>
        </td>

        <td>
          <%= a_response.response_number %>
        </td>

        <td>
          <%= a_response.body %>
        </td>

        <td>
          <%= a_response.message_id %>
        </td>

        <td>
          <%= a_response.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_response.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_response.updated_at) %> ago
        </td>

        <td>
          <a href="/responses/<%= a_response.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
