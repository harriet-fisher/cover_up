<div>
  <div>
    <h1>
      List of all coverletters
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new coverletter
    </h2>

    <form action="/insert_coverletter" method="post">
      <div>
        <label for="body_box">
          Body
        </label>

        <textarea id="body_box" name="query_body" rows="3"></textarea>
      </div>

      <div>
        <label for="job_id_box">
          Job
        </label>

        <input type="text" id="job_id_box" name="query_job_id">
      </div>

      <div>
        <label for="company_id_box">
          Company
        </label>

        <input type="text" id="company_id_box" name="query_company_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create coverletter
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Body
        </th>

        <th>
          Job
        </th>

        <th>
          Company
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_coverletters.each do |a_coverletter| %>
      <tr>
        <td>
          <%= a_coverletter.id %>
        </td>

        <td>
          <%= a_coverletter.body %>
        </td>

        <td>
          <%= a_coverletter.job_id %>
        </td>

        <td>
          <%= a_coverletter.company_id %>
        </td>

        <td>
          <%= a_coverletter.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_coverletter.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_coverletter.updated_at) %> ago
        </td>

        <td>
          <a href="/coverletters/<%= a_coverletter.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
